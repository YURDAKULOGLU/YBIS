{
  "name": "ybis-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "YBIS - Your Business Intelligence System",
  "packageManager": "pnpm@10.18.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "pnpm --filter '@ybis/ui' --filter '@ybis/core' run build",
    "mobile": "cd apps/mobile && pnpm start",
    "mobile:ios": "cd apps/mobile && pnpm start -- --ios",
    "mobile:android": "cd apps/mobile && pnpm start -- --android",
    "mobile:web": "cd apps/mobile && pnpm start -- --web",
    "web": "cd apps/web && pnpm run dev",
    "backend": "cd apps/backend && pnpm run dev",
    "backend:deploy": "cd apps/backend && pnpm run deploy",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "pnpm -r run type-check",
    "doctor": "cd apps/mobile && npx expo-doctor",
    "doctor:verbose": "cd apps/mobile && npx expo-doctor --verbose"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^6.1.1",
    "expo": "~54.0.21",
    "husky": "^9.1.7",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YURDAKULOGLU/YBIS.git"
  },
  "author": "",
  "license": "ISC"
}
