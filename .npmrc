# YBIS Monorepo - PNPM Configuration
# Enforces PNPM usage and prevents npm/yarn

# Enforce engine-strict (blocks wrong Node/PNPM versions)
engine-strict=true

# Auto-install peer dependencies
auto-install-peers=true

# React Native + Expo SDK 54 Configuration
# Expo SDK 54 supports isolated dependencies, but React Native's native tooling
# (Android Gradle, iOS CocoaPods) still expects flat node_modules structure
# Reference: https://docs.expo.dev/guides/monorepos/#isolated-installations
node-linker=hoisted

# Use workspace protocol for local packages
link-workspace-packages=true

# Strict workspace dependencies
save-workspace-protocol=true
