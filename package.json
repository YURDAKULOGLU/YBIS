{
  "name": "ybis-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "YBIS - Your Business Intelligence System",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "cd apps/mobile && npm start",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:web": "cd apps/mobile && npm run web",
    "web": "cd apps/web && npm run dev",
    "backend": "cd apps/backend && npm run dev",
    "backend:deploy": "cd apps/backend && npm run deploy",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^6.1.1",
    "expo": "~54.0.12",
    "husky": "^9.1.7",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YURDAKULOGLU/YBIS.git"
  },
  "author": "",
  "license": "ISC"
}
