{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ybis/ui": ["../../packages/ui/src"],
      "@ybis/core": ["../../packages/core/src"],
      "@ybis/chat": ["../../packages/chat/src"],
      "@ybis/auth": ["../../packages/auth/src"],
      "@ybis/theme": ["../../packages/theme/src"],
      "@ybis/i18n": ["../../packages/i18n/src"],
      "@ybis/database": ["../../packages/database/src"],
      "@ybis/llm": ["../../packages/llm/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/theme" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/auth" },
    { "path": "../../packages/database" },
    { "path": "../../packages/chat" },
    { "path": "../../packages/llm" },
    { "path": "../../packages/i18n" }
  ]
}
